<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <DataCollectionRunSettings>
    <DataCollectors>
      <DataCollector friendlyName="Code Coverage" uri="datacollector://Microsoft/CodeCoverage/2.0" assemblyQualifiedName="Microsoft.VisualStudio.Coverage.DynamicCoverageDataCollector, Microsoft.VisualStudio.TraceCollector, Version=11.0.0.0, Culture=neutral, PublicKeyToken=b03f5f7f11d50a3a">
        <Configuration>
          <CodeCoverage>
            <ModulePaths>
              <Include>
                <ModulePath>.*ClippyWeb\.dll$</ModulePath>
                <ModulePath>.*SemanticKernelHelper\.dll$</ModulePath>
                <ModulePath>.*SharedInterfaces\.dll$</ModulePath>
              </Include>
              <Exclude>
                <ModulePath>.*Tests\.dll$</ModulePath>
                <ModulePath>.*TestConsole\.dll$</ModulePath>
              </Exclude>
            </ModulePaths>

            <!-- Match attributes on source code elements -->
            <Attributes>
              <Exclude>
                <!-- Exclude methods and classes with these attributes -->
                <Attribute>^System\.Diagnostics\.CodeAnalysis\.ExcludeFromCodeCoverageAttribute$</Attribute>
                <Attribute>^System\.CodeDom\.Compiler\.GeneratedCodeAttribute$</Attribute>
                <Attribute>^System\.Diagnostics\.DebuggerNonUserCodeAttribute$</Attribute>
                <Attribute>^System\.Runtime\.CompilerServices\.CompilerGeneratedAttribute$</Attribute>
              </Exclude>
            </Attributes>

            <!-- Match source files by path -->
            <Sources>
              <Exclude>
                <!-- Exclude auto-generated files -->
                <Source>.*\\obj\\.*</Source>
                <Source>.*\\bin\\.*</Source>
                <Source>.*\\.g\.cs$</Source>
                <Source>.*\\.g\.i\.cs$</Source>
                <Source>.*\\.designer\.cs$</Source>
                <Source>.*\\.Designer\.cs$</Source>
                <Source>.*\\Migrations\\.*</Source>
                <Source>.*\\wwwroot\\.*</Source>
                <Source>.*\\node_modules\\.*</Source>
                
                <!-- Exclude Razor Pages code-behind generated files -->
                <Source>.*\\.cshtml\.g\.cs$</Source>
                <Source>.*Pages.*\.g\.cs$</Source>
                
                <!-- Exclude specific patterns for source-generated files -->
                <Source>.*\\TemporaryGeneratedFile_.*</Source>
                <Source>.*\.AssemblyInfo\.cs$</Source>
                <Source>.*\.AssemblyAttributes\.cs$</Source>
              </Exclude>
            </Sources>

            <!-- Match functions by name or other criteria -->
            <Functions>
              <Exclude>
                <!-- Exclude property getters/setters -->
                <Function>^.*get_.*$</Function>
                <Function>^.*set_.*$</Function>
                
                <!-- Exclude compiler-generated functions -->
                <Function>^.*&lt;.*&gt;.*__.*$</Function>
                <Function>^.*\$.*$</Function>
              </Exclude>
            </Functions>

          </CodeCoverage>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>

  <!-- Additional settings for Coverlet (if using dotnet-coverage) -->
  <RunConfiguration>
    <ResultsDirectory>.\TestResults</ResultsDirectory>
  </RunConfiguration>

</RunSettings>
